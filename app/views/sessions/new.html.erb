<h1>Sign in</h1>

<%= form_for(:session, :url => sessions_path, :html => { :class => "login"}) do |f| %>
<fieldset class="left">
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.check_box :remember_me %>
		<%= f.label :remember_me %>
  </div>
  <div class="actions">
    <%= f.submit "Sign in" %>
  </div>
</fieldset>

<fieldset class="right">
<p><strong>Sign in through one of these services:</strong></p>

<a href="/auth/twitter" class="twitterConnect_login">
  Twitter
</a>
<a href="/auth/facebook" class="facebookConnect_login">
  Facebook
</a>
</fieldset>
<% end %>

<div class="clear"></div>