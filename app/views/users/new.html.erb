<h1>Sign up</h1>

<%= form_for(@user) do |f| %>
	<%= render 'shared/error_messages', :object => f.object %>
	<div class="field">
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :email %><br />
		<%= f.text_field :email %>
	</div>
	<div class="field">
		<%= f.label :password %><br />
		<%= f.password_field :password %>
	</div>
	<div class="field">
		<%= f.label :password_confirmation, "Confirmation" %><br />
		<%= f.password_field :password_confirmation %>
	</div>

	<%= @user.authentications %>
	<%= f.fields_for :authentications do |auth_form| %>
	  <%= auth_form.hidden_field :provider %>
		<%= auth_form.hidden_field :uid %>
	<% end %>

	<div class="actions">
		<%= f.submit "Sign up" %>
	</div>
<% end %>
